<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_grey"
    tools:context=".infoFilm">


    <TextView
        android:id="@+id/infoFilm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Title"

        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoFilm_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:isScrollContainer="true"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoFilm_title"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="122dp"
                    android:layout_height="181dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_vector" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Жанр:"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="65dp"
                    android:text="Кінокомпанія:"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/infoFilm_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_bg"
                    android:text="ENTER:"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="19dp"
                    android:text="Країна:"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_company" />

                <TextView
                    android:id="@+id/infoFilm_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_bg"
                    android:text="ENTER:"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/infoFilm_imdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_imdb"
                    android:text="ENTER:"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoFilm_time"
                    app:layout_constraintEnd_toStartOf="@+id/infoFilm_tags_btn"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/infoFilm_casts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_bg"
                    android:text="ENTER:"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/infoFilm_tags_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/infoFilm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/time_bg"
                    android:text="ENTER:"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_country" />

                <TextView
                    android:id="@+id/infoFilm_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/time_bg"
                    android:text="Теги"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoFilm_time"
                    app:layout_constraintEnd_toStartOf="@+id/infoFilm_tags_btn"
                    app:layout_constraintStart_toEndOf="@+id/infoFilm_imdb" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_bg"
                    android:maxWidth="200dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/infoFilm_genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER:"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Актори"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infofilm_about" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Опис"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

                <TextView
                    android:id="@+id/infoFilm_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Додати"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoFilm_isSaved"
                    app:layout_constraintStart_toEndOf="@+id/infoFilm_isSaved" />

                <TextView
                    android:id="@+id/infoFilm_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Переглянути"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoFilm_isWatched"
                    app:layout_constraintStart_toEndOf="@+id/infoFilm_isWatched" />

                <TextView
                    android:id="@+id/infofilm_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="21dp"
                    android:text="Опис"
                    android:textColor="@color/Light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <CheckBox
                    android:id="@+id/infoFilm_isWatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:button="@drawable/is_watched_film"
                    app:layout_constraintStart_toEndOf="@+id/infoFilm_add"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_imdb" />

                <CheckBox
                    android:id="@+id/infoFilm_isSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:button="@drawable/is_saved"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_imdb" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:progressBackgroundTint="@color/Light_gray"
                    app:layout_constraintStart_toStartOf="@+id/infoFilm_time"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_add" />

                <Button
                    android:id="@+id/infoFilm_tags_btn"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="21dp"
                    android:background="@drawable/time_bg"
                    android:padding="0dp"
                    android:text="Теги"
                    android:textColor="@color/white"

                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoFilm_time"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_imdb"
                    android:text="ENTER:"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/infoFilm_tags_btn"
                    app:layout_constraintTop_toTopOf="@+id/ratingBar" />

                <Button
                    android:id="@+id/btnAddComent"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_login_signup"
                    android:text="Опублікувати"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/infoFilm_casts"
                    app:layout_constraintStart_toStartOf="@+id/infoFilm_casts"
                    app:layout_constraintTop_toBottomOf="@+id/comment" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/infoFilm_casts"
                    app:layout_constraintStart_toStartOf="@+id/infoFilm_casts"
                    app:layout_constraintTop_toBottomOf="@+id/infoFilm_casts">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/commentText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Коментар" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/showComments"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/text_login_signup"
                    android:text="Показати всі коментарі"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btnAddComent"
                    app:layout_constraintStart_toStartOf="@+id/btnAddComent"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddComent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_filter_style"
        android:text="Повернутись"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>